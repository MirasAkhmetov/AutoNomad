<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/PrimaryBlue</item>
        <item name="colorAccent">@color/grey_4</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>
    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@color/White</item>
        <item name="elevation">0dp</item>
        <item name="titleTextStyle">@style/TitleColor</item>
    </style>
    <style name="TitleColor" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/grey_2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">20dp</item>
    </style>
    <style name="TabLayoutTextAppearance" parent="TabLayoutTextAppearance" tools:ignore="ResourceCycle">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_rectangle_bottom_sheet</item>
    </style>
    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />


    <style name="RoundedBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/RoundedBottomSheetStyle</item>
    </style>
    <style name="RoundedBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_rectangle_bottom_sheet</item>
    </style>
<!--    MyStyle-->
    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/RoundedBottomSheetStyle</item>
    </style>
    <style name="DialogStyle2" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>


    <style name="MyHintStyle" parent="@android:style/TextAppearance">
        <item name="colorControlNormal">@color/ProgressColor</item>
        <item name="colorControlActivated">@color/ProgressColor</item>
        <item name="colorControlHighlight">@color/ProgressColor</item>
    </style>

    <style name="ButtonPrimary">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/btn_text_color</item>
        <item name="android:background">@drawable/btn_background_blue</item>
    </style>

    <style name="FilterRadioButtonTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:textColor">@color/grey_2</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="CustomDialogTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>

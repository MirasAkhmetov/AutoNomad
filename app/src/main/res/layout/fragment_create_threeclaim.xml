<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/ic_back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_default_exit" />
            <TextView
                android:id="@+id/txt1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_toLeftOf="@id/txt2"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:background="@drawable/ic_checkbox_checked"
                android:textColor="@color/white"
                android:textFontWeight="500"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/txt2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_toLeftOf="@id/txt3"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:background="@drawable/ic_checkbox_checked"
                android:textColor="@color/grey_6"
                android:textFontWeight="500"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/txt3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_toLeftOf="@id/txt4"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:background="@drawable/background_round_blacknomer"
                android:text="3"
                android:textColor="@color/grey_6"
                android:textFontWeight="500"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/txt4"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:background="@drawable/background_round_nomer"
                android:text="4"
                android:textColor="@color/grey_6"
                android:textFontWeight="500"
                android:textSize="12sp" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Время, место"
            android:textColor="@color/grey_3"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:textSize="21sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Время*"
            android:textColor="@color/grey_4"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:textSize="15sp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginRight="3dp"
            android:layout_weight=".28"
            android:layout_margin="10dp"
            android:background="@drawable/background_grey_3_to_grey_6_10dp"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:spinnerMode="dropdown" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_penalty_info_hidden" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lin1"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/txtch1"
                android:layout_weight="7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/background_white_with_grey7_line"
                android:text="Сегодня"
                android:padding="14dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/grey_3"
                android:textSize="15sp" />
            <TextView
                android:layout_weight="7"
                android:id="@+id/txtch2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:background="@drawable/background_white_with_grey7_line"
                android:text="Завтра"
                android:padding="14dp"
                android:textColor="@color/grey_3"
                android:textSize="15sp" />
            <TextView
                android:layout_weight="6"
                android:id="@+id/txtch3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:background="@drawable/background_white_with_grey7_line"
                android:text="Выбрать дату"
                android:padding="14dp"
                android:textColor="@color/grey_3"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/lin2"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/txtch4"
                android:layout_weight="7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/background_white_with_grey7_line"
                android:text="Сегодня"
                android:padding="14dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/grey_3"
                android:textSize="15sp" />
            <TextView
                android:layout_weight="7"
                android:id="@+id/txtch5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:background="@drawable/background_white_with_grey7_line"
                android:text="Завтра"
                android:padding="14dp"
                android:textColor="@color/grey_3"
                android:textSize="15sp" />
            <TextView
                android:layout_weight="6"
                android:id="@+id/txtch6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:background="@drawable/background_white_with_grey7_line"
                android:text="Выбрать дату"
                android:padding="14dp"
                android:textColor="@color/grey_3"
                android:textSize="15sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvSelectedPeriod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey_3"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/exTwoAppBarLayout"
            android:background="@color/grey_9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include
                layout="@layout/item_calendar_day_legendtwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />

        </LinearLayout>

        <com.kizitonwose.calendarview.CalendarView
            android:visibility="gone"
            android:id="@+id/exTwoCalendar"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="@color/grey_9"
            app:cv_dayViewResource="@layout/item_calendar_day_parkingtwo"
            app:cv_monthHeaderResource="@layout/item_calendar_header_parkingtwo"
            app:cv_orientation="vertical" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/background_grey_7_12dp_rectangle" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Адрес"
            android:textColor="@color/grey_4"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_address"
            android:drawableStart="@drawable/ic_claim_create_claim_2"
            android:drawablePadding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/White"
            android:inputType="text"
            android:gravity="center_vertical"
            android:text="Выберите адрес"
            android:padding="16dp"
            android:textColor="@color/grey_2"
            android:textColorHint="@color/grey_4" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@color/ProgressColor" />

        <Button
            android:layout_weight="1"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:id="@+id/btn_next_claim"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/background_blue_rectangle"
            android:text="@string/next"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="normal" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:layout_width="144dp"
        android:layout_height="144dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_profile_male" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:text="Айбар"
        android:textColor="@color/grey_2"
        android:textFontWeight="600"
        android:textSize="22sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:text="Оцените работу специалиста"
        android:textColor="@color/grey_3"
        android:textFontWeight="600"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:text="Таким образом вы поможете другим пользователям, которые собираются воспользоваться этой услугой"
        android:textColor="@color/grey_4"
        android:textFontWeight="500"
        android:textSize="14sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="16dp"
        android:src="@drawable/ic_5_stars" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_default_line_grey_6"
        android:hint="Расскажите пару слов"
        android:padding="16dp"
        android:textColor="@color/grey_3"
        android:textSize="14sp" />
    <Button
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@drawable/background_blue_rectangle"
        android:text="Отправить"
        android:textColor="@color/grey_9"
        android:textSize="18sp"
        android:textFontWeight="500"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:text="Пропустить"
        android:textColor="@color/grey_4"
        android:textSize="18sp"
        android:textFontWeight="500"/>
</LinearLayout>
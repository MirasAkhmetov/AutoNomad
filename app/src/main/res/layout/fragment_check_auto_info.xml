                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="2012-09-11"
                        android:textColor="@color/grey_2"
                        android:textFontWeight="500" />
                </LinearLayout>


            </LinearLayout>

            <View

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.main_page.home.FuelFragment"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_first"
            android:layout_width="24dp"
            android:layout_height="16dp" />

        <TextView
            android:id="@+id/lbl_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="АИ-92"
            android:textColor="@color/PrimaryBlue"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_first"
            android:layout_marginStart="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="21dp"
            android:textColor="@color/grey_2"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="10dp"
        android:background="@color/grey_5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/layout_second"
        app:layout_constraintStart_toEndOf="@id/layout_first"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layout_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/layout_third"
        app:layout_constraintStart_toEndOf="@id/layout_first"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_second"
            android:layout_width="24dp"
            android:layout_height="16dp" />

        <TextView
            android:id="@+id/lbl_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="АИ-92"
            android:textColor="@color/PrimaryBlue"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_second"
            android:layout_marginStart="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="21dp"
            android:textColor="@color/grey_2"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="10dp"
        android:background="@color/grey_5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/layout_third"
        app:layout_constraintStart_toEndOf="@id/layout_second"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layout_third"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_third"
            android:layout_width="24dp"
            android:layout_height="16dp" />

        <TextView
            android:id="@+id/lbl_third"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="АИ-92"
            android:textColor="@color/PrimaryBlue"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_third"
            android:layout_marginStart="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="21dp"
            android:textColor="@color/grey_2"
            android:textSize="12sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>